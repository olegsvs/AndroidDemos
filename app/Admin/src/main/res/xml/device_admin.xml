<?xml version="1.0" encoding="UTF-8"?>
<device-admin xmlns:android="http://schemas.android.com/apk/res/android"
              android:visible="true">
    <uses-policies>
        <!-- 强行锁定 -->
        <force-lock/>
        <!-- 清除所有数据（恢复出厂设置） -->
        <wipe-data/>
        <!-- 重置密码 -->
        <reset-password/>
        <!-- 限制密码选择 -->
        <limit-password/>
        <!-- 监控登录尝试 -->
        <watch-login/>
        <expire-password/>
        <disable-camera/>
        <encrypted-storage/>
        <disable-keyguard-features/>
    </uses-policies>
</device-admin>
