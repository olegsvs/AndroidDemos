<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="cm.android.demo.TimerActivity">

    <Button
            android:id="@+id/HandlerTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HandlerTask"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:textAllCaps="false" />

    <Button
            android:id="@+id/TimerTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TimerTask"
            android:layout_below="@+id/HandlerTask"
            android:layout_marginTop="61dp"
            app:layout_constraintTop_toBottomOf="@+id/HandlerTask"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            android:textAllCaps="false" />

    <Button
            android:text="scheduleExecutorService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textAllCaps="false"
            android:layout_marginTop="66dp"
            app:layout_constraintTop_toBottomOf="@+id/TimerTask"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0"
            android:id="@+id/scheduleExecutorService" />
</android.support.constraint.ConstraintLayout>

